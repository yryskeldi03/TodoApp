<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.geek.todoapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.geek.todoapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.geek.todoapp.ui.feed.FeedFragment"
        android:label="@string/title_feed"
        tools:layout="@layout/fragment_feed" />
    <fragment
        android:id="@+id/formFragment"
        android:name="com.geek.todoapp.forms.FormFragment"
        android:label="Новая задача"
        tools:layout="@layout/fragment_form" />
    <fragment
        android:id="@+id/profileFragment2"
        android:name="com.geek.todoapp.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/boardFragment"
        android:name="com.geek.todoapp.ui.onboard.BoardFragment"
        android:label="fragment_board"
        tools:layout="@layout/fragment_board" />
    <fragment
        android:id="@+id/imageFragment"
        android:name="com.geek.todoapp.ImageFragment"
        android:label="fragment_image"
        tools:layout="@layout/fragment_image" />

    <fragment
        android:id="@+id/authFragment"
        android:name="com.geek.todoapp.ui.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" />
    <fragment
        android:id="@+id/formFragmentFeed"
        android:name="com.geek.todoapp.forms.FormFragmentFeed"
        android:label="fragment_form_feed"
        tools:layout="@layout/fragment_form_feed" />
    <fragment
        android:id="@+id/fullPostFragment"
        android:name="com.geek.todoapp.FullPostFragment"
        android:label="fragment_full_post"
        tools:layout="@layout/fragment_full_post" />
</navigation>